{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "api",
    "baseUrl": "api",
    "noImplicitAny": false,
    "noEmitOnError": false,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist"]
} 